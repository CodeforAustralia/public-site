body{
  font-family: 'Gotham-Book', Helvetica, Arial;
  color: #5E5E5E;
}

h1{
  font-size: 21px;
  font-weight: normal;
}

h2{
  font-family: 'Gotham-Book', Helvetica, Arial;
  font-size: 16px;
  line-height: 2em;
  margin: 0;
  &.gray{
    color: #919191;
  }
}

h3{
  font-size: 15px;
  line-height: 2em;
  margin: 0;
  font-weight: normal;
}

section{
  .header{
    margin: 30px auto;
    width: 80%;
    h1{
      margin-bottom: 30px;
      padding: 8px 22px;
      display: inline-block;
      text-transform: uppercase;
      border: 2px solid #000;
      .border-radius(5px);
    }
    &.bg-pic{
      color: #fff;
      h1, h2{
        color: #fff;
      }
      h1{
        border-color: #fff;
        span{
          color: #5E5E5E;
          margin-right: 10px;
        }
      }
    }
  }
  &.page1{
    h1{
      font-family: 'Gotham-Book', Helvetica, Arial;
      font-weight: normal;
      font-size: 29px;
      margin-top: 170px;
      color: #010000;
    }
    margin-top: 20px;
  }
  &.page2, &.page3, &.page4{
    text-align: center;
    margin: 50px 0 80px;
    h1{
      color: #010000;
      span{
        color: #5E5E5E;
        margin-right: 10px;
      }
    }
  }
}

.main{
  &.white{
    background: white;
  }
  &.green{
    background: #4bb896;
  }
}

.img-icon{
  max-height: 116px;
}

.bg-pic{
  background-image: asset-url('ballroom.jpg', image);
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  &.header{
    width: 100%;
  }
}

.shadow{
  width: 100%;
  height: 100%;
  background: black;
  position: absolute;
  margin: -19px;
  .opacity(0.5);
}

img.support {
  height: 60px !important;
}

label, .checkbox{
  font-family: "Helvetica Neue", Helvetica, Arial;
  text-align: left;
  margin-top: 10px;
}

.btn.signup{
  font-family: "Helvetica Neue", Helvetica, Arial;
  font-size: 22px;
  padding: 12px 24px;
  text-decoration: none;
  color: @gray;
}

form{
  margin: 30px 0;
  input{
  margin-bottom: 10px;
  }
}

.inverse-link{
  background: white;
  color: black !important;
  padding: 6px 64px;
  .border-radius(4px);
  text-decoration: none !important;
}

.hidden-nav{
  background: #4bb896;
  height: 50px;
  top: 0;
  position: fixed;
  margin-top: -50px;
  width: 100%;
  .box-shadow(0 0 9px black);
  &.show{
    margin-top: 0 !important;
  }
  .signup{
    font-size: 16px;
    padding: 4px 12px;
    margin-top: 8px;
  }
}

.social-links{
  margin: 20px 0;
  img{
  margin: 0 40px;
}
}

.category-links{
  margin: 40px 0;
  a{
    margin: 10px 0;
    display: inline-block;
  }
}

footer{
  text-align: center;
  .nav{
    font-family: 'Minion Pro', Garamond, Arial;
    font-size: 21px;
    a{
      color: lighten(@gray, 20%);
      padding: 0 40px;
    }
  }
}
